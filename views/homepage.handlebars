{{!< layouts/main}}

<section class="section">
  <div class="container">
    {{#each posts}}
      <article class="media">
        <div class="media-content">
          <div class="content">
            <h1>{{body}}</h1>
            <p class="has-text-grey-light">Created on: {{created_on}} Created by: {{user.name}}</p> <!-- Move the post created date here -->
          </div>
          <nav class="level is-mobile">
            <div class="level-left">
              <h3 class="subtitle">Comments:</h3>
            </div>
          </nav>
          <a class="navbar-item" href="/com">
            <button class="button is-primary is-outlined">Create a comment</button>
          </a>
          <ul class="box">
            {{#each Comments}}
              <li class="box">
                <p class="has-text-dark">{{body}}</p>
                <p class="has-text-grey-light">Created on: {{created_on}} - Created by: {{user.name}}</p>
              </li>
            {{/each}}
          </ul>
        </div>
      </article>
      <hr>
    {{/each}}
  </div>
</section>
